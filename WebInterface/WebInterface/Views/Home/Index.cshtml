@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>IRT - IIASA Reproducibility Tool</h1>
    <br/>

    <form>
        <div class="form-group">
            <label for="program">Program</label>
            <select class="form-control" id="program">
                <option>Gams</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="programVersion">Program Version</label>
            <select class="form-control" id="programVersion">
                <option>1.0</option>
                <option>1.1</option>
                <option>1.2</option>
                <option>2.0</option>
                <option>2.1</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="githubUser">GitHub User ID</label>
            <input type="text" class="form-control" id="githubUser" rows="1" value="vwmaus"/>
        </div>
        
        @*<div class="form-group">
            <label for="githubRepo">GitHub Repository</label>
            <input type="text" class="form-control" id="githubRepo" rows="1" value="transport-model"/>
        </div>*@

        <div class="form-group">
            <label for="model">Model / Script</label>
            <select class="form-control" id="model">
            </select>
        </div>
        
        <div class="form-group">
            <label for="modelversion">Model-Version</label>
            <select class="form-control" id="modelversion">
            </select>
        </div>
        
        @* File input does not show the full file path for security reasons, therefore the user must type in the path to the licence. *@
        <div class="form-group">
            <label for="licencePath">Licence Path</label>
            <input type="text" class="form-control" id="licencePath" rows="1" value=""/>
            <small id="fileHelp" class="form-text text-muted">Type the path of your program licence in case the executing program requires a licence.</small>
        </div>
        
        @*<div class="form-group">
            <label for="licencePath">Licence Path</label>
            <input type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
            <small id="fileHelp" class="form-text text-muted">Select the path of your program licence in case the executing program requires a licence.</small>
        </div>*@

        <div class="form-check">
            <label for="outputSettings">Output Settings</label>
            <div>
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                    Save result to IIASA database
                </label>
            </div>

            <div>
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                    Download result
                </label>  
            </div>

        </div>
        
        <a id="link_dl_dockerfile" href="@Url.Action("DownloadDockerfile", "Home")">Create Dockerfile</a>
        <br/><br />
        <button id="btn_runScript" type="submit" class="btn btn-primary">Run Script</button>
        
        @*<button id="btn_downloadDockerfile" class="btn btn-default" onclick="@Html.ActionLink("DownloadDockerfile", "Home")" type="submit">Download Dockerfiles</button>*@
    </form>
</div>
